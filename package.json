{
  "name": "zotherd",
  "version": "0.0.0",
  "description": "ZotHerd",
  "config": {
    "addonName": "ZotHerd",
    "addonID": "zotherd@gaoweihe",
    "addonRef": "zotherd",
    "addonInstance": "ZotHerd",
    "prefsPrefix": "extensions.zotero.zotherd"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gaoweihe/zotherd.git"
  },
  "author": "gaoweihe",
  "bugs": {
    "url": "https://github.com/gaoweihe/zotherd.git"
  },
  "homepage": "https://github.com/gaoweihe/zotherd#readme",
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "start": "zotero-plugin serve",
    "build": "tsc --noEmit && zotero-plugin build",
    "lint": "prettier --write . && eslint . --fix",
    "release": "zotero-plugin release",
    "test": "echo \"Error: no test specified\" && exit 1",
    "update-deps": "npm update --save"
  },
  "dependencies": {
    "@types/concat-stream": "^2.0.3",
    "concat-stream": "^2.0.0",
    "fs": "^0.0.1-security",
    "toml": "^3.0.0",
    "webdav": "^5.7.1",
    "zotero-plugin-toolkit": "^3.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/node": "^22.7.4",
    "eslint": "^9.12.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.3.0",
    "zotero-plugin-scaffold": "^0.1.0",
    "zotero-types": "^2.1.1"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "endOfLine": "lf",
    "overrides": [
      {
        "files": [
          "*.xhtml"
        ],
        "options": {
          "htmlWhitespaceSensitivity": "css"
        }
      }
    ]
  }
}
